{
  "name": "go-subtest",
  "displayName": "go-subtest",
  "description": "quickly generate json required in your launch.json for subtests",
  "version": "0.0.1",
  "icon": "media/gopher.png",
  "publisher": "kperath",
  "repository": {
    "url": "https://github.com/kperath/go-subtest"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "go-subtest",
      "properties": {
        "go-subtest.useClipboard": {
          "type": "boolean",
          "default": false,
          "description": "paste to your clipboard instead of to your launch.json (self managed)"
        }
      }
    },
    "commands": [
      {
        "command": "go-subtest.add",
        "title": "go-subtest: add test config"
      },
      {
        "command": "go-subtest.goto",
        "title": "go-subtest: go to test config"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.17",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
